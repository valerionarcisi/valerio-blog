---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import FormattedDate from "~/components/FormattedDate.astro";
import Tag from "~/components/Tag.astro";
import Title from "~/components/Title.astro";
import type { TPost } from "~/services/post";
import { SITE_TITLE } from "~/consts";
import "./BlogPost.css";

type Props = Omit<TPost, "content">;

const {
  title,
  extract,
  date,
  coverImage,
  lang,
  tags,
  coverAuthorName,
  coverAuthorLink,
} = Astro.props;
console.log(coverAuthorLink, coverAuthorName);
---

<html lang={lang}>
  <head>
    <BaseHead
      title={`${title} | ${SITE_TITLE}`}
      description={extract}
      cover={coverImage.url}
    />
  </head>

  <body data-theme="dark">
    <Header />
    <main>
      <article class="BlogPost">
        <Title title={title} />
        {coverImage.url && <img src={coverImage.url} alt={title} />}
        <div class="prose">
          <hr />
          <div class="info">
            <div class="date">
              Posted on <FormattedDate date={new Date(date)} />
            </div>
            <div class="tags">
              {tags.map((tag: string) => <Tag tag={tag} />)}
            </div>
          </div>
          {
            coverAuthorName && (
              <div class="cover">
                Cover by{" "}
                <a target="_blank" href={coverAuthorLink || "#"}>
                  {coverAuthorName}
                </a>
              </div>
            )
          }
          <hr />
          <slot />
        </div>
      </article>
    </main>
    <Footer />
  </body>
</html>
