---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import FormattedDate from "~/components/FormattedDate.astro";
import Tag from "~/components/Tag.astro";
import Title from "~/components/Title.astro";
import StructuredData from "~/components/StructuredData.astro";
import ReadingTime from "~/components/ReadingTime.astro";
import RelatedPosts from "~/components/RelatedPosts.astro";
import type { TPost } from "~/services/post";
import { SITE_TITLE } from "~/consts";
import "./BlogPost.css";

type Props = Omit<TPost, "content">;

const {
  title,
  extract,
  date,
  coverImage,
  lang,
  tags,
  coverAuthorName,
  coverAuthorLink,
  coverDescription,
  slug,
} = Astro.props;

// Get content for reading time calculation
const content = await Astro.slots.render("default");
---

<html lang={lang}>
  <head>
    <BaseHead
      title={`${title} | ${SITE_TITLE}`}
      description={extract}
      cover={coverImage.url}
    />
    <StructuredData
      type="article"
      title={title}
      description={extract}
      url={Astro.url.href}
      image={coverImage.url}
      datePublished={date}
      tags={tags}
    />
  </head>

  <body>
    <Header />
    <main>
      <article class="BlogPost">
        <Title title={title} />
        <div class="info">
          <div class="cover-image">
            {coverImage.url && <img src={coverImage.url} alt={title} />}
          </div>
          <div class="metadata">
            <div class="tags">
              {tags.map((tag: string) => <Tag tag={tag} />)}
            </div>
            <div class="date">
              Posted on <FormattedDate date={new Date(date)} />
            </div>
            <ReadingTime content={content} />
          </div>
        </div>
        {
          coverAuthorName && (
            <div class="author">
              Cover by
              <a target="_blank" href={coverAuthorLink || "#"}>
                {coverAuthorName}
              </a>
              {coverDescription && (
                <div class="description">{coverDescription}</div>
              )}
            </div>
          )
        }
        <div class="prose" set:html={content} />

        <RelatedPosts currentSlug={slug} currentTags={tags} />
      </article>
    </main>
    <Footer />
  </body>
</html>
