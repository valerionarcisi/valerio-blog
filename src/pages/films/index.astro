---
import BaseHead from "~/components/BaseHead.astro";
import Header from "~/components/Header.astro";
import Footer from "~/components/Footer.astro";
import Title from "~/components/Title.astro";
import FilmTimeline from "~/components/FilmTimeline.astro";
import { getCollection } from "astro:content";
import { SITE_TITLE } from "~/consts";
import { getLangFromId } from "~/i18n/utils";

const allFilms = await getCollection("films");
const films = allFilms
  .filter(e => getLangFromId(e.id) === "it")
  .sort((a, b) => a.data.sortOrder - b.data.sortOrder);
---

<!doctype html>
<html lang="it">
  <head>
    <BaseHead title={`Film | ${SITE_TITLE}`} description="I cortometraggi di Valerio Narcisi" />
  </head>
  <body>
    <Header />
    <main>
      <Title title="Film" />
      <FilmTimeline lang="it" films={films} festivalLabel="festival" />
    </main>
    <Footer />
  </body>
</html>
