---
import { Image } from "astro:assets";
import HeaderLink from "~/components/HeaderLink.astro";
import ThemeToggle from "~/components/ThemeToggle.astro";
import "~/components/Header.css";
---

<header class="Header">
  <div class="logo-container">
    <HeaderLink href="/" class="logo">
      <Image src="/img/me.jpg" alt="Logo Valerio Narcisi" width={32} height={32} loading="eager" />
      <div>Valerio Narcisi</div>
    </HeaderLink>
  </div>
  <div class="header-controls">
    <ThemeToggle />
    <div class="menu-toggle">
      <span></span>
      <span></span>
      <span></span>
    </div>
  </div>
  <nav>
    <HeaderLink href="/">Home</HeaderLink>
    <HeaderLink href="/blog">Blog</HeaderLink>
    <HeaderLink href="/caramella-shortmovie"
      >Caramella Short movie</HeaderLink
    >
    <HeaderLink href="/who-i-am">Who I Am</HeaderLink>
    <HeaderLink href="/filmmaker-journey">Filmmaker Journey</HeaderLink>
  </nav>
</header>

<script>
  const menuToggle = document.querySelector(".menu-toggle");
  const nav = document.querySelector("nav");

  menuToggle?.addEventListener("click", () => {
    menuToggle.classList.toggle("active");
    nav?.classList.toggle("active");
  });
</script>
